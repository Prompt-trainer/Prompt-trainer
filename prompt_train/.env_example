# Django
SECRET_KEY=YOUR_DJANGO_SECRET_KEY   # Секретний ключ Django
DEBUG=1                              # 1 — режим розробки, 0 — production

# База даних PostgreSQL
PG_DB=YOUR_DB_NAME
PG_USER=YOUR_DB_USER
PG_PASSWORD=YOUR_DB_PASSWORD
PG_HOST=db                          # 'db' для Docker, 'localhost' для локального запуску
PG_PORT=5432

# Redis
REDIS_HOST=redis                    # 'redis' для Docker, 'localhost' для локального запуску
REDIS_PORT=6379

# Email (для розсилки через Celery)
EMAIL_HOST_USER=YOUR_EMAIL_ADDRESS
EMAIL_HOST_PASSWORD=YOUR_EMAIL_PASSWORD

# AI оцінювання промптів
PERPLEXITY_API_KEY=YOUR_PERPLEXITY_API_KEY

# OAuth (GitHub)
GITHUB_OAUTH_CLIENT_ID=YOUR_GITHUB_OAUTH_CLIENT_ID
GITHUB_OAUTH_CLIENT_SECRET=YOUR_GITHUB_OAUTH_CLIENT_SECRET

# Шифрування чату (Fernet key)
CHAT_ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY

# AWS S3 (зберігання медіафайлів)
USE_S3=True                         # True — S3, False — локальне зберігання
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET
AWS_STORAGE_BUCKET_NAME=YOUR_BUCKET_NAME
AWS_S3_REGION_NAME=YOUR_REGION_NAME

# Адмін-панель
ADMIN_SITE_URL=YOUR_ADMIN_SITE_URL